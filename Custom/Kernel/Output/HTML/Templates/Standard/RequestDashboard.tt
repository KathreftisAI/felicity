	<div class="clearfix" style="height: 20px;"></div>

	<div class="col-md-4 text-center">
		<div class="info-box">
			<div class="col-md-6">
				<h4>Open Requests</h4>
				<h1>[% Data.Open_request %]</h1>
			</div>
			<div class="col-md-6 location" onclick="location.href='[% Env('Baselink') %]Action=AgentRequest;ColumnFilterState=4;Filter=All;'">
				<h4>Open Requests</h4>
				<h1>[% Data.TicketCounts.Open %]</h1>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	<div class="col-md-4 text-center">
		<div class="info-box">
			<div class="col-md-6">
				<h4>Requests not Updated for 7 days</h4>
				<h1>[% Data.sevenday_requestticket %]</h1>
			</div>
			<div class="col-md-6 location" onclick="location.href='[% Env('Baselink') %]Action=AgentRequest'">
				<h4>Request not Updated for 7 days</h4>
				<h1>[% Data.TicketCounts.SevenDayUpdate %]</h1>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	<div class="col-md-4 text-center">
		<div class="info-box">
			<div class="col-md-6">
				<h4>Open Requests Older Than 30 days</h4>
				<h1>[% Data.ThirtyDays_requestticket %]</h1>
			</div>
			<div class="col-md-6 location" onclick="location.href='[% Env('Baselink') %]Action=AgentRequest;Filter=All;'">
				<h4>Open Request Older Than 30 days</h4>
				<h1>[% Data.TicketCounts.ThirtyDayUpdate %]</h1>
